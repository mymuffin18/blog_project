<div class="block">
<% flash.each do |type, msg| %>
    <% if type == 'error' %>
        <div role="alert">
            <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
                Error
            </div>
        <div div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
            <%= msg %>
        </div>
    </div>
    <% elsif type == 'success' %>
        <div role="alert">
            <div class="bg-green-500 text-white font-bold rounded-t px-4 py-2">
                Success
            </div>
        <div div class="border border-t-0 border-green-400 rounded-b bg-red-100 px-4 py-3 text-green-700">
            <%= msg %>
        </div>
    <% end %>
<% end %>
</div>
